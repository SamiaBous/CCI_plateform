{% extends 'base.html.twig' %}
{% block body %}
        

{# templates/Security/login.html.twig #}
{# ... you will probably extend your base template, like base.html.twig #}
    <h1 class="login" style="margin-top: 12%;">Entreprendre en Haute Sa√¥ne</h1>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    
    <div id="cadre_co">
        <div id="connexion">
            <h2 class="titre_entree">Connexion</h2>
            <form action="{{ path('login') }}" method="post">   
                <div class="div_username">          
                    <input type="text" id="username" name="_username" placeholder="Identifiant" value="{{ last_username }}" /> 
                </div>   

                 <div class="div_mdp">   
                    <input type="password" id="password" name="_password" placeholder="Mot de passe" />
                </div>
            
                {#
                    If you want to control the URL the user
                    is redirected to on success (more details below)
                    <input type="hidden" name="_target_path" value="/account" />
                #}
            
                <button class="btn_connex" type="submit" style="margin-top: 1%;">Connexion</button>
            </form>
        </div>
    </div>

{% endblock %}